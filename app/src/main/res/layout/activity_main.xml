<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.nhatminh.example.customview.curveprogressdialog.CurveProgressBar
            android:id="@+id/curveProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDecrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"
            android:visibility="gone">

        </Button>

        <Button
            android:id="@+id/btnIncrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20sp"
            android:visibility="gone">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.nhatminh.example.customview.curveprogressdialog.CurveSeekBar
            android:id="@+id/progressBarTestColor"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:textColor="@android:color/holo_red_dark"
            android:layout_margin="5dp"
            android:background="#C9C8C8"/>

        <Button
            android:id="@+id/btnDecrease2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="20sp">

        </Button>

        <Button
            android:id="@+id/btnIncrease2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20sp">

        </Button>

    </LinearLayout>





</LinearLayout>